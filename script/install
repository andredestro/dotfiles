#!/usr/bin/env bash
#
# Run all dotfiles installers.

set -e

cd "$(dirname $0)"/..

# Run Homebrew through the Brewfile
echo "› brew bundle"
brew bundle -v
brew cask cleanup

echo "› Installing software from Mac App Store"
sh macappstore

# find the installers and run them iteratively
echo "› Find and executes install scripts"
find . -name install.sh | while read installer ; do 
	echo "›› ${installer}..."
	sh -c "${installer}" ;
done
